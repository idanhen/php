<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  ServerAdmin webmaster@zazma.com
  <% if @params[:server_aliases] && !@params[:server_aliases].empty? -%>
  ServerAlias www.zazma.com zazma.com local.zazma.com customers.zazma.com suppliers.zazma.com <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  <% end -%>
  DocumentRoot <%= @params[:docroot] %>
  SetEnv APP_PRODUCTION true
  SetEnv APP_CONFIGURATION production

  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  <Directory ~ "\.svn">
    Order allow,deny
    Deny from all
  </Directory>

  <Directory ~ "\.git">
    Order allow,deny
    Deny from all
  </Directory>

  LogLevel info
  FileETag none

  RewriteEngine On
  Include <%= @params[:rewrite_config] %>*
  RewriteLog <%= node[:apache][:log_dir] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0

  <% if @params[:mounted_at] -%>
  AliasMatch ^<%= @params[:mounted_at] %>/(.*)$ <%= @params[:docroot] %>$1
  <% end -%>

  Include <%= @params[:local_config] %>*
</VirtualHost>

<% if node[:deploy][@application_name][:ssl_support] -%>
<VirtualHost *:443>
  ServerName <%= @params[:server_name] %>
  ServerAdmin webmaster@zazma.com
  <% if @params[:server_aliases] && !@params[:server_aliases].empty? -%>
  ServerAlias www.zazma.com zazma.com local.zazma.com customers.zazma.com suppliers.zazma.com <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  <% end -%>
  DocumentRoot <%= @params[:docroot] %>
  SetEnv APP_PRODUCTION true
  SetEnv APP_CONFIGURATION production

  SSLEngine on
  SSLProxyEngine on
  SSLCertificateFile /srv/www/website/current/Beta/ssl_certificates/zazma.com.crt
  SSLCertificateKeyFile /srv/www/website/current/Beta/ssl_certificates/zazma.com.key
  SSLCertificateChainFile /srv/www/website/current/Beta/ssl_certificates/intermediate.crt
  SetEnvIf User-Agent ".*MSIE.*" nokeepalive ssl-unclean-shutdown downgrade-1.0 force-response-1.0

  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  <Directory ~ "\.svn">
    Order allow,deny
    Deny from all
  </Directory>

  <Directory ~ "\.git">
    Order allow,deny
    Deny from all
  </Directory>

  LogLevel info
  FileETag none

  RewriteEngine On
  Include <%= @params[:rewrite_config] %>-ssl*
  RewriteLog <%= node[:apache][:log_dir] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0

  <% if @params[:mounted_at] -%>
  AliasMatch ^<%= @params[:mounted_at] %>/(.*)$ <%= @params[:docroot] %>$1
  <% end -%>

  Include <%= @params[:local_config] %>-ssl*
</VirtualHost>
<% end -%>
